<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="@drawable/gradientbackground"
        android:padding="30dp"
        tools:context=".Login_form">

    <TextView
            android:text="Connexion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:gravity="center"
            android:textColor="#AEEA00"
            android:textSize="30dp"
            android:textStyle="bold|normal|italic"
            android:textAppearance="@style/TextAppearance.AppCompat"/>
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/numm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#E1FA90"
                android:drawableTop="@drawable/algerie"
                android:textSize="22sp"
                android:text="+213"
        />
    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:textColor="#AEEA00"
            android:textColorHint="#AEEA00"
    >

        <EditText
                android:id="@+id/numero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#E1FA90"
                android:textSize="22sp"
                android:textColorHint="#E1FA90"
                android:hint="Numéro"
                android:ems="20"
                android:inputType="number"/>
    </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:textColor="#AEEA00"
            android:textColorHint="#AEEA00"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#AEEA00">

        <EditText
                android:id="@+id/mdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#E1FA90"
                android:textSize="22sp"
                android:textColorHint="#E1FA90"
                android:hint="Mot de passe"
                android:ems="20"
                android:inputType="textPassword"
                />
    </android.support.design.widget.TextInputLayout>
    <Button
            android:text="Connexion"
            android:layout_gravity="center"
            android:background="@drawable/button_shape"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/cnx"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"/>
    <TextView
            android:text="Mot de passe oublié ?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/forgetmdp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:textStyle="bold|normal|italic"
            android:textAppearance="@style/TextAppearance.AppCompat"/>
    <Button
            android:text="S'inscrire"
            android:layout_gravity="center"
            android:background="@drawable/button_shape"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/inscription"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"/>
</LinearLayout>